                 data-name="カレブのアイコン" 
                 data-tags="カレブ アイコン キャラクター">
                <img src="https://i.imgur.com/WVrHpaB.jpeg" alt="カレブのアイコン" loading="lazy">
                <div class="item-info">
                    <h3 class="item-title">カレブのアイコン</h3>
                    <span class="item-type">アイコン</span>
                    <div class="item-details">
                        <span>736x736</span>
                        <span>57.78 kb</span>
                    </div>
                    <button class="btn-download" data-image="https://i.imgur.com/WVrHpaB.jpeg" data-filename="icon-kaleb.jpeg">
                        <i class="fas fa-download"></i>
                        <span>アイコンをダウンロード</span>
                    </button>
                </div>
            </div>
            
            <!-- 新しいアイコン -->
            <div class="content-item" data-type="icon"
                 data-name="ワヒのアイコン" 
                 data-tags="ワヒ クリエイター アイコン">
                <img src="https://i.imgur.com/Py44HxM.png" alt="ワヒのアイコン" loading="lazy">
                <div class="item-info">
                    <h3 class="item-title">ワヒのアイコン</h3>
                    <span class="item-type">アイコン</span>
                    <div class="item-details">
                        <span>768x768</span>
                        <span>171.1 kb</span>
                    </div>
                    <button class="btn-download" data-image="https://i.imgur.com/Py44HxM.png" data-filename="icon-wahi.png">
                        <i class="fas fa-download"></i>
                        <span>画像をダウンロード</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- 画像プレビューモーダル -->
        <div id="imageModal" class="modal">
            <span class="modal-close">&times;</span>
            <img class="modal-content" id="modalImage" alt="拡大プレビュー">
            <button class="btn-download modal-download" id="modalDownload">
                <i class="fas fa-download"></i>
                <span>画像をダウンロード</span>
            </button>
        </div>
    </div>

    <script>
        // メインシステム
        document.addEventListener('DOMContentLoaded', function() {
            // DOM要素
            const languageSelect = document.getElementById('language-select');
            const searchInput = document.getElementById('search-input');
            const searchBtn = document.getElementById('search-btn');
            const filterButtons = document.querySelectorAll('.filter-btn');
            const contentItems = document.querySelectorAll('.content-item');
            const downloadButtons = document.querySelectorAll('.btn-download');
            const modal = document.getElementById('imageModal');
            const modalImage = document.getElementById('modalImage');
            const modalDownloadBtn = document.getElementById('modalDownload');
            const modalClose = document.querySelector('.modal-close');
            const itemImages = document.querySelectorAll('.content-item img');
            const resultsCounter = document.getElementById('results-counter');
            const noResults = document.getElementById('no-results');

            // 各言語のURL
            const languageUrls = {
                jp: "https://lacosprofanos.com.br/ja/icon&wallpaper/",
                en: "https://lacosprofanos.com.br/en/icon&wallpaper/",
                pt: "https://lacosprofanos.com.br/icon&wallpaper/"
            };

            // アプリケーション状態
            let currentFilter = 'all';
            let currentSearch = '';

            // テキストを正規化する関数
            function normalizeText(text) {
                return text
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '')
                    .replace(/[^\w\s]/g, '')
                    .replace(/\s+/g, ' ')
                    .trim();
            }

            // 結果カウンターを更新する関数
            function updateResultsCounter() {
                const visibleItems = document.querySelectorAll('.content-item:not(.hidden)').length;
                const totalItems = contentItems.length;
                
                if (visibleItems === 0) {
                    noResults.style.display = 'block';
                    resultsCounter.textContent = '';
                } else {
                    noResults.style.display = 'none';
                    resultsCounter.textContent = `${visibleItems} 件 / ${totalItems} 件を表示中`;
                }
            }

            // 検索関数
            function performSearch() {
                const searchTerm = normalizeText(searchInput.value);
                currentSearch = searchInput.value;
                
                contentItems.forEach(item => {
                    const type = item.getAttribute('data-type');
                    
                    // フィルターを通過するかチェック
                    const passesFilter = currentFilter === 'all' || type === currentFilter;
                    
                    // 検索を通過するかチェック
                    let passesSearch = true;
                    if (searchTerm) {
                        let searchData = '';
                        
                        // 検索データを収集
                        searchData += item.getAttribute('data-name') + ' ';
                        searchData += item.getAttribute('data-tags') + ' ';
                        
                        const normalizedSearchData = normalizeText(searchData);
                        passesSearch = normalizedSearchData.includes(searchTerm);
                    }
                    
                    // アイテムを表示または非表示
                    if (passesFilter && passesSearch) {
                        item.classList.remove('hidden');
                    } else {
                        item.classList.add('hidden');
                    }
                });
                
                updateResultsCounter();
            }

            // フィルターを適用する関数
            function applyFilter(filterType) {
                currentFilter = filterType;
                currentSearch = searchInput.value;
                
                // アクティブなボタンを更新
                filterButtons.forEach(btn => {
                    btn.classList.remove('active');
                    if (btn.getAttribute('data-filter') === filterType) {
                        btn.classList.add('active');
                    }
                });
                
                performSearch();
            }

            // 画像をダウンロードする関数
            function downloadImage(imageUrl, filename, event) {
                const link = document.createElement('a');
                link.href = imageUrl;
                link.download = filename;
                link.setAttribute('target', '_blank');
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                // 視覚的フィードバック
                const button = event.target.closest('.btn-download');
                if (button) {
                    const originalContent = button.innerHTML;
                    button.innerHTML = `<i class="fas fa-check"></i> ダウンロード完了！`;
                    button.style.backgroundColor = '#2E7D32';
                    
                    setTimeout(() => {
                        button.innerHTML = originalContent;
                        button.style.backgroundColor = '';
                    }, 2000);
                }
            }

            // モーダルで画像を開く関数
            function openModal(imageUrl, filename) {
                modalImage.src = imageUrl;
                modalDownloadBtn.setAttribute('data-image', imageUrl);
                modalDownloadBtn.setAttribute('data-filename', filename);
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }

            // モーダルを閉じる関数
            function closeModal() {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }

            // イベントリスナー
            // 検索
            searchBtn.addEventListener('click', performSearch);
            searchInput.addEventListener('keyup', function(event) {
                if (event.key === 'Enter') {
                    performSearch();
                }
                performSearch();
            });

            // フィルター
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const filterType = this.getAttribute('data-filter');
                    applyFilter(filterType);
                });
            });

            // ダウンロード
            downloadButtons.forEach(button => {
                button.addEventListener('click', function(event) {
                    event.stopPropagation();
                    const imageUrl = this.getAttribute('data-image');
                    const filename = this.getAttribute('data-filename');
                    downloadImage(imageUrl, filename, event);
                });
            });

            // 画像プレビュー
            itemImages.forEach(img => {
                img.addEventListener('click', function() {
                    const item = this.closest('.content-item');
                    const downloadBtn = item.querySelector('.btn-download');
                    const imageUrl = this.src;
                    const filename = downloadBtn.getAttribute('data-filename');
                    openModal(imageUrl, filename);
                });
            });

            // モーダル
            modalClose.addEventListener('click', closeModal);

            modalDownloadBtn.addEventListener('click', function(event) {
                const imageUrl = this.getAttribute('data-image');
                const filename = this.getAttribute('data-filename');
                downloadImage(imageUrl, filename, event);
            });

            window.addEventListener('click', function(event) {
                if (event.target === modal) {
                    closeModal();
                }
            });

            // ESCキーでモーダルを閉じる
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape' && modal.style.display === 'block') {
                    closeModal();
                }
            });

            // 言語 - リダイレクト
            languageSelect.addEventListener('change', function() {
                const selectedLanguage = this.value;
                
                // 対応するURLにリダイレクト
                if (languageUrls[selectedLanguage]) {
                    window.location.href = languageUrls[selectedLanguage];
                }
            });

            // ブラウザの優先言語を検出してセレクトを調整
            function detectPreferredLanguage() {
                const currentPath = window.location.pathname;
                
                // 特定のページにいるか確認
                if (currentPath.includes('/jp/icon&wallpaper') || currentPath.includes('/jp/icon%26wallpaper')) {
                    languageSelect.value = 'jp';
                } else if (currentPath.includes('/en/icon&wallpaper') || currentPath.includes('/en/icon%26wallpaper')) {
                    languageSelect.value = 'en';
                } else {
                    languageSelect.value = 'pt';
                }
            }

            // タッチデバイス最適化
            if ('ontouchstart' in window) {
                document.documentElement.classList.add('touch-device');
                
                // タッチ用の視覚的フィードバックを改善
                document.querySelectorAll('.btn-download, .filter-btn, .main-nav-btn').forEach(btn => {
                    btn.addEventListener('touchstart', function() {
                        this.style.transform = 'scale(0.95)';
                    });
                    
                    btn.addEventListener('touchend', function() {
                        this.style.transform = '';
                    });
                });
            }

            // 初期化
            detectPreferredLanguage();
            applyFilter('all');
            updateResultsCounter();
        });
    </script>
</body>
</html>
